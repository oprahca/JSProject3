extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1= project_name

        p.lead.text-light= description

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each t in technologies
            li= t

        if live_urls
          a.button.expanded(href=`${live_urls}` target='_blank') Live Demo
        if github_urls
          a.button.expanded(href=`${github_urls}` target='_blank') GitHub Repo
    br
    br
    img.image(src=`${largeImage_urls[0]}` alt=`project-${id}`)
    img.image(src=`${largeImage_urls[1]}` alt=`project-${id}`)
    if largeImage_urls[2]
      img.image(src=`${largeImage_urls[2]}` alt=`project-${id}`)